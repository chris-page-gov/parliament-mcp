{
  "name": "parliament-mcp-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3"
      },
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-vscode.makefile-tools",
        "ms-ossdata.vscode-dbt-power-user"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "postCreateCommand": "uv pip install --system -r <(uv export --format requirements-txt --no-dev) || true",
  "extensions": [
    "ms-python.python",
    "ms-azuretools.vscode-docker",
    "ms-vscode.makefile-tools",
    "ms-ossdata.vscode-dbt-power-user"
  ],
  "remoteUser": "vscode"
}
